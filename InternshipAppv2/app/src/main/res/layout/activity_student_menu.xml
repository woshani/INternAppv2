<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shay.incursio.internshipappv2.studentMenu">

    <TextView
        android:id="@+id/tvStudID"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textAlignment="textStart"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/tvStudName"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="name"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/tvIC"
        app:layout_constraintRight_toRightOf="@+id/tvIC"
        app:layout_constraintLeft_toLeftOf="@+id/tvIC"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="View All Vacancy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@+id/tvStudName"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/tvIC"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="IC"
        android:textAlignment="textStart"
        app:layout_constraintRight_toRightOf="@+id/tvStudID"
        app:layout_constraintLeft_toLeftOf="@+id/tvStudID"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tvStudID"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="view status application"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewAll"
        app:layout_constraintVertical_bias="0.156" />

</android.support.constraint.ConstraintLayout>
